<!DOCTYPE html>
<html>
	<head>
		<title>Andela Inventory Management</title>
		<link rel="stylesheet" type="text/css" href="css/styles.css">
	</head>
	<body>

		<h2> Welcome to Andela Inventory Management System</h2>
		<a href="/add"> Add Item </a>
		<table border="1" cellpadding="4">
			<tr>
				<th>Name</th>
				<th>Description</th>
				<th>Serial Number</th>
				<th>Andela Serial Code</th>
				<th>Date Bought</th>
				<th></th>
				<th></th>
			</tr>
			<% items.forEach(function(item) { %>
				<tr>
					<td><%= item.name %></td>
					<td><%= item.description %></td>
					<td><%= item.serialno %></td>
					<td><%= item.serialcode %></td>
					<td><%= item.date %></td>
					<td><a href="/edit/<%= item.id %>">Edit</a></td>
					<td><a href="/delete/<%= item.id %>">Delete</a></td>
				</tr>
			<% }); %>
		</table>

			
	</body>
</html>